{
  "name": "@3846masa/http-signature",
  "description": "Create / Verify HTTP Signatures (https://tools.ietf.org/html/draft-cavage-http-signatures-10)",
  "license": "MIT",
  "author": "3846masa <3846masahiro+git@gmail.com>",
  "homepage": "https://github.com/3846masa/http-signature#readme",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/3846masa/http-signature.git"
  },
  "bugs": {
    "url": "https://github.com/3846masa/http-signature/issues"
  },
  "version": "0.1.0",
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "prebuild": "npm-run-all clean lint",
    "build": "tsc",
    "clean": "rimraf lib",
    "codecov": "codecov",
    "lint": "npm-run-all -p lint:*",
    "lint:package-json": "prettier-package-json --write",
    "lint:ts": "prettier --write src/**/*.ts",
    "test": "npm-run-all test:tsc test:ava",
    "test:ava": "nyc ava src/**/*.spec.ts",
    "test:tsc": "tsc --noEmit"
  },
  "types": "lib/index.d.ts",
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^10.17.13",
    "ava": "^2.1.0",
    "codecov": "^3.6.1",
    "husky": "^4.0.6",
    "lint-staged": "^9.5.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.0.0",
    "prettier": "^1.19.1",
    "prettier-package-json": "^2.1.3",
    "rimraf": "^3.0.0",
    "ts-node": "^8.6.0",
    "typescript": "^3.7.4"
  },
  "keywords": [
    "http-signature"
  ],
  "engines": {
    "node": ">=10.0.0"
  },
  "ava": {
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "git add"
    ],
    "*.md": [
      "prettier --write",
      "git add"
    ],
    "package.json": [
      "prettier-package-json --write",
      "git add"
    ]
  },
  "nyc": {
    "reporter": [
      "lcov",
      "html",
      "text"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.spec.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "sourceMap": true
  }
}
